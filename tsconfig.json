{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",

        "rootDir": "./src",
        "outDir": "./dist",

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },

        "esModuleInterop": true,
        "resolveJsonModule": true,

        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "removeComments": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
